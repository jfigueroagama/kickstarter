<% provide(:title, 'Home')%>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/project_form' %>
      </section>
    </aside>
  </div>  
<% else %>
<div class="center hero-unit">
  <h1>Welcome to Kickstarter</h1>

  <h2>
    This is the home page for the Kickstarter site that allows to
    pledge Creators projects
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>
